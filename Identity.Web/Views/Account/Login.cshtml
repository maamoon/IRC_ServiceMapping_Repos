@{

    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/stylesheets.css" rel="stylesheet" />

</head>
<body class="bg-img-num1">

    <div class="container">


        <div class="col-md-12" style="height:60px;text-align:center"><img src="/img/bk5.png"></div>
        <div class="col-md-12" style="height:80px;text-align:center"></div>
        <div class="col-md-12" style="height:130px;text-align:center;padding-top:30px;padding-bottom:30px"> <img src="/img/IRC-Logo1.png" style="width:150px;height:200px;" /></div>


        <div class="login-block">

            <div class="block block-transparent" style="padding-top:100px">
                <div class="head">


                </div>
                <div class="content controls npt">
                    <form action="@Url.Action("Login", "Account")" method="post">
                        @Html.AntiForgeryToken()
                        <div class="form-row user-change-row">
                            <div class="col-md-12">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <span class="icon-user"></span>
                                    </div>
                                    <input type="Email" class="form-control" name="Email" placeholder="Login" />
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-12">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <span class="icon-key"></span>
                                    </div>
                                    <input type="password" class="form-control" name="Password" placeholder="Password" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-default btn-block btn-clean">Log In</button>
                        </div>
                    </form>
                    <div class="form-row">
                        <div class="col-md-12" style="text-align:center;font-size:10px;line-height:12PX;padding-top:15px">
                            If you don’t have access to the website please contact  (Husni.Abumelhim@rescue.org) and (Ibrahim.al-malkawi@rescue.org)
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</body>
