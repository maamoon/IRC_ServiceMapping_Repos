
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog ">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel"></h4>
            </div>
            <div class="widget-body">
                <div class="widget-main">
                    @using (Html.BeginForm("ChangePicture", "Manage", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {

                        <div>
                            @Html.TextBox("file", "", new { type = "file" }) <br />

                            <input type="submit" value="Upload" />

                            @ViewBag.Message

                        </div>


                    }
                    <div class="form-group" style="width: 354px;height: 150px;">

                        <label for="DocFile" style="border: 1px solid #ccc;display: inline-block;padding: 5px 13px;cursor: pointer;">
                            <i class="fa fa-cloud-upload"></i> UploadPicture
                        </label>
                      @*  <input id="DocFile" name="DocFile" onchange="UploadAndDisplayImage( this, event,'ProfilePicture-' +'@Context.User.Identity.Name'  , 'DocPreview', 'DocPath' );" type="file" style="display:none" />*@

                        <img width="100" height="100" id="DocPreview" />
                        <label id="DocPath" style="width:65px;display:none"> </label>
                        <br />
                        <div>
                            <button type="submit" class="btn">Save</button>
                        </div>

                    </div>

                    @* end user picture*@
                </div>
            </div>
        </div>
        @* end user picture*@
    </div>
</div>
